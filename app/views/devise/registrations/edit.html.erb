        <div class="offset-lg-4">
          <h2>Cambiar Contraseña</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label "Nueva Contraseña" %><br />
              <%= f.password_field :password, autocomplete: "Nueva Contraseña" %>
              <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> caracteres minimo</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "Confirma Nueva Contraseña" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "Nueva Contraseña" %>
            </div>

            <div class="field">
              <%= f.label "Actual Contraseña" %> <br />
              <%= f.password_field :current_password, autocomplete: "Actual Contraseña" %>
            </div>

            <div class="actions">
              <%= f.submit "Actualizar" %>
            </div>
          <% end %>

        </div>

