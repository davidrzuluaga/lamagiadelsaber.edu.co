<%= render "./page/header" %>
<a name="inicio"></a>
<%= render "./page/navbar" %>
<div class="main">
    <div class="dropsreverted"></div>
        <div class="offset-lg-2 col-lg-6">  
              <% if @config.errors.any? %>
                <div class="alert alert-danger">
                  <ul>
                  <% @config.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
              <h3 class="form-group">Cambiar configuraci√≥n</h3>
             <%= form_for @config do |f| %>
              <div class="form-group">
                <%= f.text_field :name, class: "form-control input-lg" %>
              </div>
              <div class="form-group">
                <%= f.text_field :config, class: "form-control input-lg", placeholder: "Ingresa la configuracion" %>
              </div>
              <div class="form-group">
                <%= f.submit class:"btn"%>
              </div>
            <% end %>
        </div>
        <%= render "./page/footer" %>
    </div>
</div>