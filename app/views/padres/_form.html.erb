<div class="offset-lg-2 col-lg-6">
      <h1><%=action%> <%=@padre.category%></h1>
      <% if @padre.errors.any? %>
        <div class="alert alert-danger">
          <ul>
          <% @padre.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    <%= form_for @padre do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: "form-control input-lg", placeholder: "Ingresa el titulo" %>
      </div>
      <a href="https://es.wikipedia.org/wiki/Markdown" target="_blank">Este campo soporta Markdown</a>
      <div class="form-group">
        <%= f.text_area :body, class:"form-control", id:"FormControlTextarea1", rows:"10", placeholder: "Ingresa el contenido" %>
      </div>
      <div class="form-group">
        <%= f.label "Boletin" %>
        <%= f.radio_button :category, "boletines" %>
        <%= f.label "Informacion Util" %>
        <%= f.radio_button :category, "infoutil" %>
      </div>
      <div class="form-group">
        <%= f.text_field :imgcover, class: "form-control input-lg", placeholder: "Ingresa un link de imagen" %>
      </div>
      <div class="form-group">
        <%= f.text_field :pdflink, class: "form-control input-lg", placeholder: "Ingresa un link de PDF" %>
      </div>
      <div>
        <%= f.submit class:"btn"%>
      </div>
    <% end %>
</div>